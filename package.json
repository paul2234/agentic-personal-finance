{
  "name": "agentic-accounting",
  "version": "0.1.0",
  "private": true,
  "description": "CLI-first headless accounting engine",
  "bin": {
    "accounting": "dist/cli/main.js"
  },
  "scripts": {
    "dev": "tsx src/cli/main.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/cli/main.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "db:migrate": "supabase db push --local",
    "db:rollback": "supabase db reset --local",
    "db:seed": "supabase db seed --local"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "commander": "^13.1.0",
    "decimal.js": "^10.5.0",
    "dotenv": "^16.6.1",
    "pg": "^8.16.3",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/node": "^24.3.1",
    "@types/pg": "^8.15.5",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.35.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0",
    "vitest": "^3.2.4",
    "tsx": "^4.20.5"
  }
}
